<section id='managers'>
  <div class='liner block'>
    <h2 class={{if (media 'mobile') 'h3' 'h3'}}>Managed by</h2>
    {{#if (or (media 'isMobile') (media 'isTablet'))}}
      <Members @members={{@managers}} @layout='vertical' />
    {{/if}}

    {{#if (or (media 'isDesktop') (media 'isWidescreen'))}}
      <Members @members={{@managers}} @layout='horizontal' />
    {{/if}}
  </div>
</section>