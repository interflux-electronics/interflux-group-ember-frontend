<section id='locations'>
  <div id='mapbox' {{did-insert this.onInsert}}></div>

  {{! Markers are rendered here first, but soon after appended to Mapbox. }}
  <div id='markers'>
    {{#each @companies as |company|}}
      <div id='marker-for-{{company.slug}}' class='marker'>
        <Svg::Marker />
      </div>

      <div id='shadow-for-{{company.slug}}' class='shadow'>
        <Svg::MarkerShadow />
      </div>
    {{/each}}
  </div>

  <div class='text'>
    <h2>Coordinated by 14 companies across the world</h2>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua.</p>
    <h2>Servicing 89+ countries</h2>
    <p>Active in 15. Duis aute irure dolor in reprehenderit in voluptate velit
      esse cillum dolore.</p>
    <Waypoint @onFirstView={{this.onFirstView}} />
  </div>

  <img
    id='logo'
    src='{{cdn}}/images/logos/interflux-group-logo-white.svg'
    alt='Interflux Group'
    width='1000'
    height='253'
  />
</section>