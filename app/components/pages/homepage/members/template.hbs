<section id='members'>
  <h2 class='h3'>Members</h2>
  <nav id='dots'>
    {{#if this.companies}}
      {{#each this.companies as |company position|}}
        <button onclick={{fn this.goTo position}} type='button'>
          <div class='dot'></div>
        </button>
      {{/each}}
    {{/if}}
  </nav>
  <nav>
    <Button
      @icon='chevron-left'
      @theme='square'
      @onClick={{this.prevCompany}}
    />
    <Button
      @icon='chevron-left'
      @theme='square'
      @onClick={{this.nextCompany}}
    />
    <button onclick={{this.prevCompany}} type='button'>Prev</button>
    <button onclick={{this.nextCompany}} type='button'>Next</button>
  </nav>

  <div id='slides'>
    {{#if this.companies}}
      <ul>
        {{#each this.companies as |company|}}
          <Pages::Homepage::Members::Slide @company={{company}} />
        {{/each}}
      </ul>
    {{else}}
      <p>Loading</p>
    {{/if}}
  </div>

  <img
    src='{{cdn}}/images/group/interflux-symbol-grey.svg'
    alt='Interflux symbol'
    width='100'
    height='70'
  />
</section>