<figure class='responsive-image {{this.orientation}} {{this.status}}'>
  <picture {{did-insert this.register}}>
    {{#if this.html}}
      {{this.html}}
    {{else}}
      <div class='no-image'>
        <Svg::Unknown />
      </div>
    {{/if}}

    {{#if this.showLoading}}
      <div class='overlay'>
        <LoadSpinner @icon='cup' />
      </div>
    {{/if}}

    {{#if this.showError}}
      <div class='overlay'>
        <Svg::Unknown />
      </div>
    {{/if}}
  </picture>
  {{#if @caption}}
    <figcaption>
      <p class='caption'>{{@caption}}</p>
      <p class='copyright'>&copy; Interflux Electronics</p>
    </figcaption>
  {{/if}}
</figure>